// Test use statements for importing from external modules.
// This tests all the different kinds of items that can be imported.

mod helper;

// Import a struct
use helper.Point;

// Import an enum
use helper.Kind;

// Import a function
use helper.get_value;

// Import a constant
use helper.MAX_VALUE;

// Import a type alias
use helper.MyInt;

pub fn main() -> i32 {
    // Use imported struct
    let p: Point = Point { x: 1, y: 2 };

    // Use imported enum
    let k: Kind = Kind::A;

    // Use imported function
    let v: i32 = get_value();

    // Use imported constant
    let m: i32 = MAX_VALUE;

    // Use imported type alias
    let n: MyInt = 42;

    p.x + v + m + n
}
