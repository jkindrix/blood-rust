// Test Vec iteration with for loops

fn test_vec_iteration() {
    let v: Vec<i32> = Vec::new();
    v.push(1);
    v.push(2);
    v.push(3);
    v.push(4);
    v.push(5);

    let sum = 0;

    // Iterate over reference to Vec
    for x in &v {
        sum = sum + *x;
    }

    // sum should be 15
    assert!(sum == 15, "Sum should be 15");
}

fn test_vec_mutable_iteration() {
    let v: Vec<i32> = Vec::new();
    v.push(1);
    v.push(2);
    v.push(3);

    // Iterate over mutable reference
    for x in &mut v {
        *x = *x * 2;
    }

    // v should now be [2, 4, 6]
    assert!(v[0] == 2);
    assert!(v[1] == 4);
    assert!(v[2] == 6);
}

fn main() {
    test_vec_iteration();
    test_vec_mutable_iteration();
    println!("Vec iteration tests passed!");
}
