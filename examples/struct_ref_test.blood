// Minimal test for struct field access through references

struct Point {
    x: f64,
    y: f64,
}

fn read_point(p: &Point) -> f64 {
    p.x + p.y
}

fn write_point(p: &mut Point, x: f64, y: f64) {
    p.x = x;
    p.y = y;
}

fn main() {
    let mut pt = Point { x: 1.0, y: 2.0 };

    // Test reading
    let sum = read_point(&pt);
    println_f64(sum);

    // Test writing
    write_point(&mut pt, 10.0, 20.0);
    println_f64(pt.x);
    println_f64(pt.y);
}
