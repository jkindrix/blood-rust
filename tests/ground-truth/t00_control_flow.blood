// Test: if/else and while loops
// EXPECT: 1
// EXPECT: 2
// EXPECT: 55
// EXPECT: 120
fn main() -> i32 {
    // Basic if/else
    let x: i32 = 10;
    if x > 5 {
        println_int(1);
    } else {
        println_int(0);
    }

    // Chained if/else
    let y: i32 = 20;
    if y < 10 {
        println_int(0);
    } else if y < 30 {
        println_int(2);
    } else {
        println_int(3);
    }

    // While loop: sum 1 to 10
    let mut sum: i32 = 0;
    let mut i: i32 = 1;
    while i <= 10 {
        sum = sum + i;
        i = i + 1;
    }
    println_int(sum);

    // Nested while: factorial of 5
    let mut fact: i32 = 1;
    let mut n: i32 = 5;
    while n > 0 {
        fact = fact * n;
        n = n - 1;
    }
    println_int(fact);

    if sum != 55 { return 1; }
    if fact != 120 { return 2; }
