// Test: early return from functions
// EXPECT: -1
// EXPECT: 1
// EXPECT: 0
// EXPECT: 6
fn sign(x: i32) -> i32 {
    if x < 0 { return -1; }
    if x > 0 { return 1; }
    0
}

fn find_first_positive(a: i32, b: i32, c: i32) -> i32 {
    if a > 0 { return a; }
    if b > 0 { return b; }
    if c > 0 { return c; }
    return -1;
}

fn factorial_early(n: i32) -> i32 {
    if n <= 1 { return 1; }
    n * factorial_early(n - 1)
}

fn main() -> i32 {
    println_int(sign(-42));
    println_int(sign(100));
    println_int(sign(0));

    if sign(-42) != -1 { return 1; }
    if sign(100) != 1 { return 2; }
    if sign(0) != 0 { return 3; }

    let pos: i32 = find_first_positive(-5, -3, 6);
    println_int(pos);
    if pos != 6 { return 4; }

    let f: i32 = factorial_early(5);
    if f != 120 { return 5; }

    0
}
