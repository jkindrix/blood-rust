// Test: recursive functions
// EXPECT: 120
// EXPECT: 55
// EXPECT: 8
fn factorial(n: i32) -> i32 {
    if n <= 1 {
        1
    } else {
        n * factorial(n - 1)
    }
}

fn fib_recursive(n: i32) -> i32 {
    if n <= 1 {
        n
    } else {
        fib_recursive(n - 1) + fib_recursive(n - 2)
    }
}

fn power(base: i32, exp: i32) -> i32 {
    if exp == 0 {
        1
    } else {
        base * power(base, exp - 1)
    }
}

fn main() -> i32 {
    let f: i32 = factorial(5);
    println_int(f);

    let fib: i32 = fib_recursive(10);
    println_int(fib);

    let p: i32 = power(2, 3);
    println_int(p);

    if f != 120 { return 1; }
    if fib != 55 { return 2; }
    if p != 8 { return 3; }
    0
}
