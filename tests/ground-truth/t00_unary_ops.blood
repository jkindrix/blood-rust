// Test: unary operators (negation, logical not)
// EXPECT: -7
// EXPECT: 7
// EXPECT: 1
// EXPECT: 0
fn negate(x: i32) -> i32 {
    0 - x
}

fn main() -> i32 {
    // Arithmetic negation
    let a: i32 = negate(7);
    println_int(a);
    if a != -7 { return 1; }

    // Double negation restores original
    let b: i32 = negate(negate(7));
    println_int(b);
    if b != 7 { return 2; }

    // Logical NOT on true
    let t: bool = true;
    if !t {
        println_int(0);
    } else {
        println_int(1);
    }

    // Logical NOT on false
    let f: bool = false;
    if !f {
        println_int(0);
    } else {
        println_int(1);
    }

    // Double negation of boolean
    if !!t && !!(!f) {
        0
    } else {
        3
    }
}
