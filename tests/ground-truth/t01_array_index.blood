// Test: array indexing with [] operator
// EXPECT: 10
// EXPECT: 30
// EXPECT: 60
fn main() -> i32 {
    let arr: [i32; 3] = [10, 20, 30];

    // Direct index access
    let first: i32 = arr[0];
    println_int(first); // 10
    if first != 10 { return 1; }

    let third: i32 = arr[2];
    println_int(third); // 30
    if third != 30 { return 2; }

    // Sum using index access
    let sum: i32 = arr[0] + arr[1] + arr[2];
    println_int(sum); // 60
    if sum != 60 { return 3; }

    0
}
