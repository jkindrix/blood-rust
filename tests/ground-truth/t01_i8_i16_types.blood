// Test: i8 and i16 integer types
// EXPECT: 127
// EXPECT: 32767
// EXPECT: -128
// EXPECT: 100
fn main() -> i32 {
    // i8 max
    let a: i8 = 127;
    let a_i: i32 = a as i32;
    println_int(a_i); // 127
    if a_i != 127 { return 1; }

    // i16 max
    let b: i16 = 32767;
    let b_i: i32 = b as i32;
    println_int(b_i); // 32767
    if b_i != 32767 { return 2; }

    // i8 negative
    let c: i8 = -128;
    let c_i: i32 = c as i32;
    println_int(c_i); // -128
    if c_i != -128 { return 3; }

    // i16 arithmetic
    let d: i16 = 50;
    let e: i16 = 50;
    let sum: i16 = d + e;
    let sum_i: i32 = sum as i32;
    println_int(sum_i); // 100
    if sum_i != 100 { return 4; }

    0
}
