// EXPECT: 42
fn main() -> i32 {
    // Create a reference to a value
    let x: i32 = 42;
    let r: &i32 = &x;

    // Dereference to get the value
    let val: i32 = *r;
    println_int(val); // 42
    if val != 42 { return 1; }

    // Reference preserves value
    println_int(*r); // 42
    if *r != 42 { return 2; }

