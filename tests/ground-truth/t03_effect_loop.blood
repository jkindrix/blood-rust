// Test: effects used inside a loop (multiple perform/resume cycles)
// EXPECT: 10
effect State<S> {
    op get() -> S;
    op put(s: S) -> ();
}

deep handler LocalState<S> for State<S> {
    let mut state: S

    return(x) { x }

    op get() {
        resume(state)
    }

    op put(s) {
        state = s;
        resume(())
    }
}

fn main() -> i32 {
    let result: i32 = with LocalState { state: 0 } handle {
        let mut i: i32 = 0;
        while i < 10 {
            let current: i32 = perform State.get();
            perform State.put(current + 1);
            i = i + 1;
        }
        perform State.get()
    };
    println_int(result);

    if result != 10 { return 1; }
    0
}
