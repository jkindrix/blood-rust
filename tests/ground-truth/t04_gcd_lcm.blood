// Test: GCD and LCM algorithms using while loops
// EXPECT: 6
// EXPECT: 60
// EXPECT: 1
fn gcd(a: i32, b: i32) -> i32 {
    let mut x: i32 = a;
    let mut y: i32 = b;
    while y != 0 {
        let temp: i32 = y;
        y = x % y;
        x = temp;
    }
    x
}

fn lcm(a: i32, b: i32) -> i32 {
    let g: i32 = gcd(a, b);
    if g == 0 { return 0; }
    (a / g) * b
}

fn main() -> i32 {
    let g1: i32 = gcd(12, 18);
    println_int(g1); // 6

    let l1: i32 = lcm(12, 20);
    println_int(l1); // 60

    // Coprime numbers
    let g2: i32 = gcd(17, 13);
    println_int(g2); // 1

    if g1 != 6 { return 1; }
    if l1 != 60 { return 2; }
    if g2 != 1 { return 3; }
    0
}
