// Test: assertion builtins (assert, assert_eq_int)
// EXPECT: 1
fn main() -> i32 {
    // assert with true should not abort
    assert(true);

    // assert with computed boolean
    let x: i32 = 10;
    assert(x > 0);
    assert(x == 10);

    // assert_eq_int with equal values
    assert_eq_int(42, 42);
    assert_eq_int(0, 0);
    assert_eq_int(-1, -1);

    // assert_eq_int with computed values
    let a: i32 = 20 + 22;
    assert_eq_int(a, 42);

    println_int(1); // reached without abort
    0
}
