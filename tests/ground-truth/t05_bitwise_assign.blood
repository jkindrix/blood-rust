// Test: bitwise compound assignment operators (&=, |=, ^=, <<=, >>=)
// EXPECT: 8
// EXPECT: 15
// EXPECT: 5
// EXPECT: 40
// EXPECT: 5
fn main() -> i32 {
    // &= (AND assign)
    let mut a: i32 = 12;
    a &= 10; // 1100 & 1010 = 1000 = 8
    println_int(a); // 8
    if a != 8 { return 1; }

    // |= (OR assign)
    let mut b: i32 = 10;
    b |= 5; // 1010 | 0101 = 1111 = 15
    println_int(b); // 15
    if b != 15 { return 2; }

    // ^= (XOR assign)
    let mut c: i32 = 15;
    c ^= 10; // 1111 ^ 1010 = 0101 = 5
    println_int(c); // 5
    if c != 5 { return 3; }

    // <<= (shift left assign)
    let mut d: i32 = 5;
    d <<= 3; // 5 * 8 = 40
    println_int(d); // 40
    if d != 40 { return 4; }

    // >>= (shift right assign)
    let mut e: i32 = 40;
    e >>= 3; // 40 / 8 = 5
    println_int(e); // 5
    if e != 5 { return 5; }

    0
}
