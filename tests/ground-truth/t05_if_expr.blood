// Test: if/else as an expression (value-producing)
// EXPECT: 10
// EXPECT: 20
fn abs(x: i32) -> i32 {
    if x < 0 { 0 - x } else { x }
}

fn main() -> i32 {
    let a: i32 = if true { 10 } else { 20 };
    println_int(a);

    let b: i32 = if false { 10 } else { 20 };
    println_int(b);

    if a != 10 { return 1; }
    if b != 20 { return 2; }

    let c: i32 = abs(-5);
    if c != 5 { return 3; }
    0
}
