// Test: region block inside an effect handler
// EXPECT: 42
effect State<S> {
    op get() -> S;
    op put(s: S) -> ();
}

deep handler LocalState<S> for State<S> {
    let mut state: S
    return(x) { x }
    op get() { resume(state) }
    op put(s) { state = s; resume(()) }
}

fn main() -> i32 {
    let result: i32 = with LocalState { state: 0 } handle {
        // Region inside handler
        let val: i32 = region {
            let a: i32 = 42;
            a
        };
        perform State.put(val);
        perform State.get()
    };
    println_int(result);

    if result != 42 { return 1; }
    0
}
