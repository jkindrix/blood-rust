// Test: basic slice type and operations
// EXPECT: 1
// EXPECT: 3
fn main() -> i32 {
    let arr: [i32; 3] = [1, 2, 3];

    // Take a slice reference
    let s: &[i32] = &arr;

    // Access first element
    let first: i32 = s[0];
    println_int(first); // 1
    if first != 1 { return 1; }

    // Access last element
    let last: i32 = s[2];
    println_int(last); // 3
    if last != 3 { return 2; }

    0
}
